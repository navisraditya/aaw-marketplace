{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "rootDir": ".", 
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@db/*": ["./db/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },
  "include": ["src", "products/db"],  /* Ensures only 'src/' is compiled */
  "exclude": ["drizzle.config.ts", "node_modules", "dist"]  /* Excludes unwanted files */
}
